<resources xmlns:android="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorNav</item>
        <item name="colorPrimaryDark">@color/colorNavDark</item>
        <item name="colorDefaultPrimary">@color/colorPrimary</item>
        <item name="colorDefaultPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="drawerArrowStyle">@style/WhiteDrawerIconStyle</item>
    </style>

    <style name="AppThemeDarkBlue" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#ededed</item>
        <item name="colorPrimaryDark">#FF5402C6</item>
        <item name="colorDefaultPrimary">#6200ea</item>
        <item name="colorDefaultPrimaryDark">#5402c6</item>
        <item name="colorAccent">#6200ea</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="drawerArrowStyle">@style/WhiteDrawerIconStyle</item>
    </style>

    <style name="AppThemeDarkOrange" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#ededed</item>
        <item name="colorPrimaryDark">#FFD45C02</item>
        <item name="colorDefaultPrimary">#ff6d00</item>
        <item name="colorDefaultPrimaryDark">#FFD45C02</item>
        <item name="colorAccent">#ff6d00</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="drawerArrowStyle">@style/WhiteDrawerIconStyle</item>
    </style>

    <style name="AppThemeGreen" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#ededed</item>
        <item name="colorPrimaryDark">#3e8f42</item>
        <item name="colorDefaultPrimary">#4caf50</item>
        <item name="colorDefaultPrimaryDark">#3e8f42</item>
        <item name="colorAccent">#4caf50</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="drawerArrowStyle">@style/WhiteDrawerIconStyle</item>
    </style>

    <style name="AppThemeOrange" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#ededed</item>
        <item name="colorPrimaryDark">#cf7c01</item>
        <item name="colorDefaultPrimary">#ff9800</item>
        <item name="colorDefaultPrimaryDark">#FFCF7C01</item>
        <item name="colorAccent">#ff9800</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="drawerArrowStyle">@style/WhiteDrawerIconStyle</item>
    </style>

    <style name="AppThemePurple" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#ededed</item>
        <item name="colorPrimaryDark">#882199</item>
        <item name="colorDefaultPrimary">#9c27b0</item>
        <item name="colorDefaultPrimaryDark">#882199</item>
        <item name="colorAccent">#9c27b0</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="drawerArrowStyle">@style/WhiteDrawerIconStyle</item>
    </style>

    <style name="AppThemeRed" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#ededed</item>
        <item name="colorPrimaryDark">#d23a2f</item>
        <item name="colorDefaultPrimary">#f44336</item>
        <item name="colorDefaultPrimaryDark">#FFD23A2F</item>
        <item name="colorAccent">#f44336</item>
        <item name="actionBarStyle">@style/MyActionBar</item>
        <item name="drawerArrowStyle">@style/WhiteDrawerIconStyle</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeDarkBlue.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeDarkOrange.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeGreen.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeOrange.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemePurple.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeRed.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="WhiteDrawerIconStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/colorTextPrimary</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="titleTextStyle">@style/MyTitleTextStyle</item>
    </style>

    <style name="MyTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>


    <!-- MENU -->
    <style name="Badge">
        <item name="android:layout_width">@dimen/badge_size</item>
        <item name="android:layout_height">@dimen/badge_size</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/badge_text_size</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="Menu.Badge" parent="Badge">

    </style>

    <style name="Menu.Badge.Red" parent="Menu.Badge">
        <item name="android:background">@drawable/item_badge_red</item>
    </style>

    <!-- TEXT STYLE -->
    <style name="TextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:lineSpacingMultiplier">1.0</item>
    </style>

    <style name="TextStyle.Display2">
        <item name="android:textSize">45sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
    </style>

    <style name="TextStyle.Display1">
        <item name="android:textSize">34sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
    </style>

    <style name="TextStyle.Headline">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="TextStyle.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="TextStyle.Subtitle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="TextStyle.Body2">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="TextStyle.Body1">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="TextStyle.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
    </style>

    <style name="TextStyle.Button">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextStyle.Disabled">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/colorDisabledText</item>
    </style>

    <!-- STYLE -->

    <style name="HeaderTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@color/colorTransparent</item>
        <item name="android:fontFamily">sans-serif-medium"</item>
    </style>

    <style name="HeaderSubtitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@color/colorTransparent</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">?colorDefaultPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingLeft">16sp</item>
        <item name="android:paddingRight">16sp</item>
        <item name="android:paddingTop">8sp</item>
        <item name="android:paddingBottom">8sp</item>
    </style>

    <style name="Button_Login">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:background">?colorDefaultPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingLeft">16sp</item>
        <item name="android:paddingRight">16sp</item>
        <item name="android:paddingTop">8sp</item>
        <item name="android:paddingBottom">8sp</item>
    </style>


    <style name="TextAppearence">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextAppearenceLabel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextAppearence.TextInputLayout" parent="TextAppearence">
        <item name="android:textColorHint">@color/colorDisabledText</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="TextAppearence.EditText" parent="TextAppearence">
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="ScrollAppearence">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fillViewport">true</item>
        <item name="android:scrollbars">none</item>
    </style>

    <style name="TrainingSectionTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">@dimen/section_title</item>
        <item name="android:background">@color/colorTransparent</item>
        <item name="android:fontFamily">sans-serif-medium"</item>
    </style>

    <style name="TrainingSectionSubtitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">@dimen/section_subtitle</item>
        <item name="android:background">@color/colorTransparent</item>
        <item name="android:fontFamily">sans-serif"</item>
    </style>

    <style name="TrainingSectionBody">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:textSize">@dimen/section_body</item>
        <item name="android:background">@color/colorTransparent</item>
        <item name="android:fontFamily">sans-serif"</item>
    </style>

    <style name="HorizontalLineal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>
        <item name="android:orientation">horizontal</item>
    </style>


    <style name="ListTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="ListSubtitle">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
    </style>

    <style name="ListDate">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
    </style>

</resources>
